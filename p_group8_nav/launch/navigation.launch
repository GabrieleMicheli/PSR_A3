<launch>

 <!-- Run the map server -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(find p_group8_nav)/maps/test.yaml"/>

 <!--- Run AMCL -->
    <include file="$(find p_group8_nav)/launch/amcl.launch" />

   <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find p_group8_nav)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find p_group8_nav)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find p_group8_nav)/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find p_group8_nav)/params/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find p_group8_nav)/params/base_local_planner_params.yaml" command="load" />
   <rosparam file="$(find p_group8_nav)/params/global_planner_params.yaml" command="load" />
 </node>

</launch>