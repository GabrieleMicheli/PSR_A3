<!-- Creating a world in GAZEBO -->

<launch>
    <!-- Including another launch file -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">

        <arg name="world_name" value="$(find psr_fnr)/worlds/fnr.world"/>

        <!-- TODO: Use this track whit teleop (see: Optimize teleop-key #4) -->
<!--        <arg name="world_name" value="$(find psr_fnr)/worlds/fnr.world"/>-->

        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="true"/>
        <arg name="headless" value="false"/>
        <arg name="debug" value="false"/>

    </include>

</launch>

<!-- Interesting documentation: http://gazebosim.org/tutorials?tut=ros_roslaunch -->